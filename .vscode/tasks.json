    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_windows",
            "type": "shell",
            "command": "mkdir -p build && cd '${workspaceFolder}/build' && cmake -DCMAKE_INSTALL_PREFIX=C:/Tools .. -A Win32 && cmake --build . --target install",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "showReuseMessage": false,
           }
        },
        {
            "label": "build_mac",
            "type": "shell",
            "command": "mkdir -p build && cd '${workspaceFolder}/build' && cmake .. -DCMAKE_BUILD_TYPE=Debug && cmake --build . ",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "showReuseMessage": false
            },
            "problemMatcher": []
        },
        {
            "label": "build_linux",
            "type": "shell",
